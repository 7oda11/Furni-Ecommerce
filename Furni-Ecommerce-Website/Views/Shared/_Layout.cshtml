<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="author" content="Untree.co">
    <link rel="shortcut icon" href="favicon.png">

    <meta name="description" content="" />
    <meta name="keywords" content="bootstrap, bootstrap4" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="~/css/tiny-slider.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
    <title>Furni Ecommerce Website </title>

    
 
</head>
<body>

    <partial name="_NavPartial"></partial>

    @RenderBody()


    <partial name="_FooterPartial"></partial>




    <!-- Correct script loading order -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script> <!-- This includes Popper.js which dropdowns need -->
    <script src="~/js/tiny-slider.js"></script>
    <script src="~/js/custom.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)


    <script>
        $(document).ready(function() {
            // check session state
            checkSessionStatus();

            // sending request each five minutes to save session state
            setInterval(keepSessionAlive, 300000);

            // when clicking any link update session time
            $(document).on('click', 'a', function() {
                keepSessionAlive();
            });
        });

        function checkSessionStatus() {
        }

        function keepSessionAlive() {
            fetch('@Url.Action("KeepSessionAlive", "Auth")')
                .then(response => {
                    if (!response.ok) {
                        console.log('Session keep-alive failed');
                    }
                })
                .catch(err => console.log('Session keep-alive error', err));
        }

    // <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script>
        function UpdateCartCount() {
            $.ajax({
                url: '/Cart/GetCartItemsCount',
                method: 'GET',
                success: function (response) {
                    $("#cart-count").text(response.count);
                }
            });
        }

        $(document).ready(function () {
            UpdateCartCount();
        });
    </script>

    
<!-- Bootstrap JS Bundle -->
    <div class="position-fixed bottom-0 end-0 p-3 " style="z-index: 11; background-color:#a8c19a">
        <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto text-dark">Notification</strong>
                <small>Now</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body text-success">
                Successflly Added To Favourite
            </div>
        </div>
    </div>
//fail error in adding to favorite
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11;background-color:#dd9692">
        <div id="errorToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto text-dark">Notification</strong>
                <small>Now</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body text-danger">
                Faild To Add In Favourite
            </div>
        </div>
    </div>


    
    <!-- Toast Container -->

</body>
</html>