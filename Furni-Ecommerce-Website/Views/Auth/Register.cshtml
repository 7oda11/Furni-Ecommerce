@model Furni_Ecommerce_Shared.UserViewModel.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "Auth";
}

<!-- Bootstrap & Font Awesome -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
<link rel="stylesheet" href="~/css/Register.css" />

<section class="container-fluid p-0 m-0 overflow-hidden">
    <div class="row g-0">
        <div class="col-lg-7 d-none d-lg-block Left-image"></div>
        <div class="col-lg-5 form-container">
            <div class="signup-form">
                <h2 class="form-title">Sign up</h2>

                <form asp-action="Register" method="post" class="register-form" id="register-form">
                    @* <div asp-validation-summary="All" class="text-danger mb-2"></div> *@

                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12 col-md-6 mb-3 ps-0 form-group">
                                <i class="fa-solid fa-user"></i>
                                <input asp-for="FirstName" placeholder="First Name" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-12 col-md-6 ps-0 form-group">
                                <i class="fa-solid fa-user"></i>
                                <input asp-for="LastName" placeholder="Last Name" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <i class="fa-solid fa-user"></i>
                        <input asp-for="UserName" placeholder="User Name" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <i class="fa-solid fa-envelope"></i>
                        <input asp-for="Email" placeholder="Your Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <i class="fas fa-phone"></i>
                        <input asp-for="PhoneNumber" placeholder="Phone Number" pattern="[0-9]{10}" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <i class="fa-solid fa-lock"></i>
                        <input asp-for="Password" placeholder="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <i class="fas fa-check-double"></i>
                        <input asp-for="ConfirmPassword" placeholder="Confirm password" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="checkbox" name="AgreeTerm" id="agree-term" class="agree-term" />
                        <label for="agree-term" class="label-agree-term">
                            <a href="#" class="term-service">Accept Terms Of Service</a>
                        </label>
                    </div>

                    <div class="form-group form-button">
                        <input type="submit" class="form-submit" value="Register" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
