@model Furni_Ecommerce_Shared.UserViewModel.ForgetPasswordViewModel

@{
    ViewData["Title"] = "Forget Password";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card p-4 shadow-lg" style="max-width: 400px; width: 100%; border: 2px solid #1c5531; border-radius: 20px; background: linear-gradient(to bottom, #d8e3c9, #f3f3f3);">
        <h2 class="text-center mb-4" style="color: #1c5531;">Forgot Password</h2>

        @if (TempData["SuccessMessage"] != null)
        {
                <div class="alert alert-success alert-dismissible fade show success-message" role="alert">
                @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
        }

        <form asp-action="SendEmail" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email address</label>
                <div class="input-group">
                    <span class="input-group-text" style="background-color: #1c5531; color: white;"><i class="fa-solid fa-envelope"></i></span>
                    <input asp-for="Email" class="form-control" placeholder="example@gmail.com" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn w-100" style="background-color: #1c5531; color: white;">Send Reset Link</button>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Login" asp-controller="Auth" class="text-decoration-none" style="color: #1c5531;">Back to Login</a>
        </div>
    </div>
</div>
