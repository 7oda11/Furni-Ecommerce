@model Furni_Ecommerce_Shared.UserViewModel.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card p-5 shadow-lg" style="max-width: 450px; width: 100%; border-radius: 20px; border: 2px solid #1c5531; background: linear-gradient(to bottom, #d8e3c9, #f3f3f3);">

        <h2 class="mb-4 text-center" style="color: #1c5531;">Reset Your Password</h2>

        <form asp-action="ResetPassword" method="post">
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Token" />

            <div class="form-group mb-3">
                <label class="mb-1" style="color: #333;">New Password</label>
                <input asp-for="NewPassword" type="password" class="form-control rounded-pill border-1" />
                <span asp-validation-for="NewPassword" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label class="mb-1" style="color: #333;">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control rounded-pill border-1" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn w-100 mt-3" style="background-color: #1c5531; color: #fff; padding: 0.6rem 0; border-radius: 30px;">
                Reset Password
            </button>
        </form>

        <div class="mt-4 text-center">
            <a asp-action="Login" asp-controller="Auth" class="text-decoration-none" style="color: #1c5531;">Back to Login</a>
        </div>

    </div>
</div>
