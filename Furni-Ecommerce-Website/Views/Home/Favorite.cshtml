@{
    ViewData["Title"] = "Favorite";
}

@* <!-- Bootstrap CSS --> *@
@* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" /> *@
@* <!-- Bootstrap Icons --> *@
@* <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" /> *@



<div class="container my-5">

    <!-- Header and Search -->
    @* <div class="d-flex justify-content-between align-items-center mb-4"> *@
    @*     <h3>Favourites</h3> *@
    @*     <button class="btn btn-light rounded-circle"> *@
    @*         <i class="bi bi-search"></i> *@
    @*     </button> *@
    @* </div> *@

    <!-- Filter Buttons -->
    <div class="btn-group mb-4" role="group">
        <button class="btn btn-dark">Bed</button>
        <button class="btn btn-outline-secondary">Sofa</button>
        <button class="btn btn-outline-secondary">Chair</button>
        <button class="btn btn-outline-secondary">Table</button>
    </div>

    <!-- Favorite Cards -->
    <div id="favorites-container">
        @for (int i = 0; i < 4; i++)
        {
                <div class="card mb-3 shadow-sm favorite-card" data-id="@i">
                    <div class="row g-0 align-items-center">
                        <div class="col-md-3">
                            <img src="https://via.placeholder.com/100" class="img-fluid rounded-start" alt="Product Image">
                        </div>
                        <div class="col-md-7">
                            <div class="card-body py-3">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h5 class="card-title mb-1">Bed</h5>
                                        <p class="text-muted mb-1">25000</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 text-end pe-3">
                            <div class="pt-3 position-relative">
                                <i class="bi bi-heart-fill text-danger fs-5 me-3"></i>
                                <div class="d-flex justify-content-end align-items-center mt-3">
                                    <span class="text-warning me-1">4.4</span>
                                    <i class="bi bi-star-fill text-warning"></i>
                                </div>

                                <!-- Dropdown with Delete -->
                                @* <div class="dropdown mt-2"> *@
                                @*     <button class="btn p-0 border-0 bg-transparent dropdown-toggle" type="button" data-bs-toggle="dropdown"> *@
                                @*         <i class="bi bi-three-dots-vertical fs-5" style="cursor: pointer;"></i> *@
                                @*     </button> *@
                                @*     <ul class="dropdown-menu dropdown-menu-end"> *@
                                @*         <li><button class="dropdown-item text-danger delete-btn" type="button">Delete</button></li> *@
                                @*     </ul> *@
                                @* </div> *@

                            </div>
                        </div>
                    </div>
                </div>
        }
    </div>
</div>

<!-- Bootstrap JS Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Delete Card Script -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const deleteButtons = document.querySelectorAll(".delete-btn");

        deleteButtons.forEach(function (btn) {
            btn.addEventListener("click", function () {
                const card = btn.closest(".favorite-card");
                if (card) {
                    card.remove();
                }
            });
        });
    });
</script>
