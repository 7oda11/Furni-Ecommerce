@model Furni_Ecommerce_Shared.UserViewModel.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login - Furni Admin</title>
    <link rel="stylesheet" href="~/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        .auth-wrapper {
            min-height: 100vh;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }

        .auth-card {
            width: 100%;
            max-width: 400px;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }

        .password-toggle {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #6c757d;
        }

        .form-control-lg {
            padding: 0.75rem 1rem;
        }
    </style>
</head>
<body>
    <div class="auth-wrapper d-flex align-items-center justify-content-center">
        <div class="auth-card card">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <h3 class="font-weight-bold">Furni Admin</h3>
                    <p class="text-muted">Sign in to continue</p>
                </div>

                <form asp-action="Login" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="UserName" class="form-label">Username</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light">
                                <i class="mdi mdi-account-outline"></i>
                            </span>
                            <input asp-for="UserName" class="form-control form-control-lg" placeholder="Enter username">
                        </div>
                        <span asp-validation-for="UserName" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Password" class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light">
                                <i class="mdi mdi-lock-outline"></i>
                            </span>
                            <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Enter password" id="passwordField">
                            <span class="password-toggle" id="togglePassword">
                                <i class="mdi mdi-eye-off"></i>
                            </span>
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="form-group form-check mb-4">
                        <input class="form-check-input" type="checkbox" asp-for="RememberMe">
                        <label class="form-check-label" asp-for="RememberMe">Remember me</label>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-gradient-primary btn-lg">
                            <i class="mdi mdi-login"></i> Sign In
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Corrected Validation Scripts -->
    @Html.Partial("_ValidationScriptsPartial")

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const togglePassword = document.querySelector('#togglePassword');
            const passwordField = document.querySelector('#passwordField');
            const icon = togglePassword.querySelector('i');

            togglePassword.addEventListener('click', function() {
                const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordField.setAttribute('type', type);
                icon.classList.toggle('mdi-eye-off');
                icon.classList.toggle('mdi-eye');
            });
        });
    </script>
</body>
</html>