@model Furni_Ecommerce_Shared.AdminViewModel.AllUserViewModel

@{
    ViewData["Title"] = "User Details";
}

<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper" style="padding: 1.5rem 1.5rem 2rem;">
            <div class="page-header">
                <h3 class="page-title">
                    <span class="page-title-icon bg-gradient-primary text-white me-2">
                        <i class="mdi mdi-account-details"></i>
                    </span> User Details
                </h3>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="card" style="min-height: auto;">
                        <div class="card-body" style="padding: 1.5rem;">
                            <div class="d-flex justify-content-between mb-4">
                                <h4 class="card-title">User Information</h4>
                                <a asp-action="Index" class="btn btn-gradient-primary">
                                    <i class="mdi mdi-arrow-left"></i> Back to List
                                </a>
                            </div>

                            <div class="user-details">
                                @* <div class="detail-row"> *@
                                @*     <span class="detail-label">ID:</span> *@
                                @*     <span class="detail-value">@Model.Id</span> *@
                                @* </div> *@
                                <div class="detail-row">
                                    <span class="detail-label">Username:</span>
                                    <span class="detail-value">@Model.UserName</span>
                                </div>
                                <div class="detail-row">
                                    <span class="detail-label">Email:</span>
                                    <span class="detail-value">@Model.Email</span>
                                </div>
                                <div class="detail-row">
                                    <span class="detail-label">First Name:</span>
                                    <span class="detail-value">@Model.FirstName</span>
                                </div>
                                <div class="detail-row">
                                    <span class="detail-label">Last Name:</span>
                                    <span class="detail-value">@Model.LastName</span>
                                </div>
                                <div class="detail-row">
                                    <span class="detail-label">Phone:</span>
                                    <span class="detail-value">@Model.PhoneNumber</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .user-details {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .detail-row {
        display: flex;
        align-items: center;
        padding: 8px 0;
        border-bottom: 1px solid #f0f0f0;
    }

    .detail-label {
        font-weight: 500;
        min-width: 120px;
        color: #4b49ac;
    }

    .detail-value {
        flex: 1;
    }
</style>