@model Furni_Ecommerce_Shared.AdminViewModel.CategoryViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Delete Category - Furni Admin</title>
    <link rel="stylesheet" href="~/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container-scroller">
        <partial name="_NavPartial" />

        <div class="container-fluid page-body-wrapper">

            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="page-header">
                        <h3 class="page-title">
                            <span class="page-title-icon bg-gradient-primary text-white me-2">
                                <i class="mdi mdi-alert-circle"></i>
                            </span> Delete Category
                        </h3>
                    </div>

                    <div class="row">
                        <div class="col-md-6 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <div class="alert alert-danger">
                                        <h4>Are you sure you want to delete this?</h4>
                                    </div>

                                    <dl class="row">
                                        <dt class="col-sm-4">Name:</dt>
                                        <dd class="col-sm-8">@Model.Name</dd>

                                        <dt class="col-sm-4">Description:</dt>
                                        <dd class="col-sm-8">@(Model.Description ?? "No description")</dd>
                                    </dl>

                                    <form asp-action="Delete">
                                        <input type="hidden" asp-for="Id" />
                                        <button type="submit" class="btn btn-gradient-danger me-2">
                                            <i class="mdi mdi-delete"></i> Confirm Delete
                                        </button>
                                        <a asp-action="Index" class="btn btn-light">Cancel</a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <partial name="_ScriptsPartial" />
</body>
</html>