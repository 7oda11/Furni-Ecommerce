@model Furni_Ecommerce_Shared.AdminViewModel.ProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<div class="page-header">
    <h3 class="page-title">
        <span class="page-title-icon bg-gradient-primary text-white me-2">
            <i class="mdi mdi-account"></i>
        </span> My Profile
    </h3>
</div>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <img src="~/assets/images/faces/face1.jpg" class="img-lg rounded-circle mb-3" alt="profile image">
                        <h4>@Model.FullName</h4>
                        <p class="text-muted">Member since @Model.MemberSince</p>
                        <div class="d-flex justify-content-center mt-4">
                            <a asp-action="EditProfile" class="btn btn-gradient-primary btn-sm me-2">
                                <i class="mdi mdi-account-edit"></i> Edit Profile
                            </a>
                            <a asp-action="ChangePassword" class="btn btn-gradient-info btn-sm">
                                <i class="mdi mdi-lock-reset"></i> Change Password
                            </a>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="table-responsive">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th>Username</th>
                                        <td>@Model.UserName</td>
                                    </tr>
                                    <tr>
                                        <th>Full Name</th>
                                        <td>@Model.FullName</td>
                                    </tr>
                                    @* <tr> *@
                                    @*     <th>First Name</th> *@
                                    @*     <td>@Model.FirstName</td> *@
                                    @* </tr> *@
                                    @* <tr> *@
                                    @*     <th>Last Name</th> *@
                                    @*     <td>@Model.LastName</td> *@
                                    @* </tr> *@
                                    <tr>
                                        <th>Email</th>
                                        <td>@Model.Email</td>
                                    </tr>
                                    <tr>
                                        <th>Phone Number</th>
                                        <td>@(Model.PhoneNumber ?? "Not provided")</td>
                                    </tr>
                                    <tr>
                                        <th>Email Confirmed</th>
                                        <td>
                                            @if (Model.EmailConfirmed)
                                            {
                                                <label class="badge badge-gradient-success">Confirmed</label>
                                            }
                                            else
                                            {
                                                <label class="badge badge-gradient-danger">Not Confirmed</label>
                                            }
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>