
@model Furni_Ecommerce_Shared.AdminViewModel.ProductViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title">
                    <span class="page-title-icon bg-gradient-danger text-white me-2">
                        <i class="mdi mdi-alert-circle"></i>
                    </span> Delete Product
                </h3>
            </div>

            <div class="row">
                <div class="col-md-6 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <div class="alert alert-danger">
                                <h4>Are you sure you want to delete this product?</h4>
                            </div>

                            <dl class="row">
                                <dt class="col-sm-4">Name:</dt>
                                <dd class="col-sm-8">@Model.Name</dd>

                                <dt class="col-sm-4">Description:</dt>
                                <dd class="col-sm-8">@Model.Description</dd>

                                <dt class="col-sm-4">Price:</dt>
                                <dd class="col-sm-8">@Model.Price</dd>

                                <dt class="col-sm-4">Stock:</dt>
                                <dd class="col-sm-8">@Model.Stock</dd>

                                @if (!string.IsNullOrEmpty(Model.ImgPath))
                                {
                                    <dt class="col-sm-4">Image:</dt>
                                    <dd class="col-sm-8">
                                        <img src="~/images/@Model.ImgPath" width="100" />
                                    </dd>
                                }
                            </dl>

                            <form asp-action="DeleteConfirm" method="post">
                                <input type="hidden" asp-for="Id" />
                                <div class="d-flex gap-4">
                                    <button type="submit" class="btn btn-gradient-danger text-nowrap">
                                        <i class="mdi mdi-delete"></i> Confirm Delete
                                    </button>
                                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
