@model IEnumerable<Furni_Ecommerce_Shared.AdminViewModel.ProductViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="p-2 m-2 ">All Products</h1>

<p>
    <a asp-action="Create" class="btn btn-primary p-2 m-2 text-center">Add New Product</a>
</p>
<table class="table table-hovered table-stripe">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-inverse-{color} for inverse buttons p-2 m-2" }) 
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-dark btn-inverse-{color} for inverse buttons p-2 m-2" })
                    @Html.ActionLink("Delete", "Delete", "Product", new { id = item.Id }, new { @class = "btn btn-danger btn-inverse-{color} for inverse buttons p-2 m-2", onclick = "return confirm('Are you sure you want to delete this product?') " })
            </td>
        </tr>
}
    </tbody>
</table>
